- @costs.each do |cost|
  #accordion.panel-group{"aria-multiselectable" => "true", :role => "tablist"}
    .panel.panel-default
      .panel-heading{role: "tab", id: "cost_title_#{cost.id}" }
        %h4.panel-title
          %a{"aria-controls" => "cost_#{cost.id}", "aria-expanded" => "true", "data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#cost_#{cost.id}"}
            = cost.created_at.strftime("%A")
      .panel-collapse.collapse.in{"aria-labelledby" => "cost_title_#{cost.id}", :role => "tabpanel", id: "cost_#{cost.id}" }
        .panel-body
          = render 'purchases_list', resource: cost
= link_to t('application.new_cost'), new_cost_path if @costs.size < Cost::DAYS_OF_WEEK
